
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="" style="display:flex;align-items:center;justify-content:center">

    <form action="Login" method="POST" class="form-horizontal" role="form">
        <div class="form-group">
            <h3>Member Login</h3>
        </div>

        <div class="form-group">
            <label>Username  </label>
            <input type="text" name="username" class="form-control" id="" placeholder="Nhập vào tài khoản">
        </div>
        <div class="form-group">
            <label>Password </label>
            <input type="password" name="password" class="form-control" id="" placeholder="Nhập vào mật khẩu">
        </div>
        <div>
            <p style="color:red;font-style:italic;font-weight:bold">@ViewBag.Message</p>
        </div>
        <div class="form-group">
            <div>
                <a class="btn btn-primary">Home</a>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </form>
</div>
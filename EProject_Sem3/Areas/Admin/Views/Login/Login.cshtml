
@{
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Medical Care | Login</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Areas/Admin/Content/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Areas/Admin/Content/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Topbar Start -->
    <div style="background: #ADD8E6;height: 100vh;position: relative;">
        <div class="container-fluid">
            <div class="row align-items-center" style="background:#369369">
                <div class="col-lg-4">
                    <img src="https://blog.hubspot.com/hubfs/become-medical-sales-rep.jpg" style="width:300px"/>
                </div>
                <div class="col-lg-4 col-6">
                    <p style="color:#1F1FFF ;font-style:italic;font-weight: bold;font-size: 60px;text-align: center;">
                        Medical Care
                    </p>
                </div>
                <div class="col-lg-4 col-6 text-right">
                    <img src="https://blog.hubspot.com/hubfs/become-medical-sales-rep.jpg" style="width:300px" />
                </div>
            </div>
        </div>


        <div class="" style="display:flex;align-items:center;justify-content:center">

            <form action="Login" method="POST" class="form-horizontal" role="form">
                <div class="form-group">
                    <h3>Admin Login</h3>
                </div>

                <div class="form-group">
                    <label>Username  </label>
                    <input type="text" name="username" class="form-control" id="" placeholder="Nhập vào tài khoản">
                </div>
                <div class="form-group">
                    <label>Password </label>
                    <input type="password" name="password" class="form-control" id="" placeholder="Nhập vào mật khẩu">
                </div>
                <div>
                    <p style="color:red;font-style:italic;font-weight:bold">@ViewBag.Message</p>
                </div>
                <div class="form-group">
                    <div>
                        <a class="btn btn-primary" href="~/Home/Index" >Home</a>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="container-fluid" style="width:98%;bottom: 2%;position:absolute;left: 1%;background:#369369;">

            <p style="color:#FFF;text-align: center;margin-top: 1rem;">
                &copy;All Rights Reserved.
            </p>

        </div>
        <!-- Footer End -->
    </div>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/Areas/Admin/Content/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/Areas/Admin/Content/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/Areas/Admin/Content/js/main.js"></script>
</body>

</html>